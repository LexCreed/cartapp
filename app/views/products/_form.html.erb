<div class="">
  <div cloass="container ">
    <div class="text-center ">
      <div class="main-container">
        <div class="box form-group col-xs-12">    
          <%= form_for(@product) do |f| %>
            <% if @product.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
                <ul>
                <% @product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="col-xs-12">
              <div class="form-group col-md-3">
                <%= f.label :title %><br>
                <%= f.text_field :title, class:"form-control" %>
              </div>

              <div class="form-group col-md-9">
                <%= f.label :description %><br>
                <%= f.text_area :description, class:"form-control area" %>
              </div>
            </div>

            <div class="col-xs-12">
              <div class="form-group col-xs-6">
                <%= f.label :Imagen %><br>
                <%= f.file_field :cover, class:"form-control" %>
              </div>

              <div class="form-group col-xs-6">
                <%= f.label :price %><br>
                <%= f.number_field :price, class:"form-control" %>
              </div>
            </div>

            <div class="col-xs-12">
              <div class="form-group col-xs-6">
                <%= f.label :category %><br>
                <%= f.text_field :category, class:"form-control" %>
              </div>

              <div class="form-group col-xs-6">
                <%= f.label :subcategory %><br>
                <%= f.text_field :subcategory, class:"form-control" %>
              </div>
            </div>

            <div class="text-center box ">
              <%= f.submit "Gardar cambios",class:"btn btn-primary btn-xs"%>
            </div>    
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
